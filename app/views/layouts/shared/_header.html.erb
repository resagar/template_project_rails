<header class="w-full sticky top-0 z-10 backdrop-blur-lg max-h-14">
  <nav class="navbar flex-row justify-between bg-base-100 border-b border-base-300 min-h-0 h-14">
    <div>
      <div class="flex-none md:hidden">
        <button class="btn btn-square btn-ghost" onclick="openNavbarDrawer()">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-5 h-5 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </button>
      </div>
      <%= link_to root_path, class: "flex flex-row justify-center items-center gap-1" do %>
        <img class="w-12 h-12"  alt="logo" src="<%= path_to_asset "logo/dynoit.svg" %>">
        <h1 class="text-xl">Dynoit</h1>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to "Commands", commands_path, class: "btn btn-ghost hidden md:inline-flex" %>
      <% end %>
      
    </div>
    <div class="flex flex-row items-center gap-1">
      <%= render "layouts/shared/ko-fi" %>
      <% if user_signed_in? %>
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-ghost hidden md:inline-flex'  %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-accent hidden md:inline-flex'  %>
        <%= link_to "Sign in", new_user_session_path, class: 'btn btn-ghost hidden md:inline-flex'  %>
      <% end %>
    </div>
  </nav>
</header>
